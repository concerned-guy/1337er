<%- include('layout/header'); %>
<%- include('layout/navbar'); %>

<div id="add">
  <div>
    <h1 class="text-center">Create new post</h1>
    <div class="form-left">
      <p class="text-center">as <a href="/user/<%= user.username %>"><%= user.fullName %></a></p>
      <hr/>

      <%- include('layout/alert'); %>

      <form action="/add" method="post">
        <div class="form-group">
          <label>Content</label>
          <textarea class="form-control" name="body" rows="7" placeholder="Something useful..." autofocus></textarea>
        </div>
        <div class="form-group">
          <label>Content type</label>
          <div>
            <label class="radio-inline">
              <input name="type" type="radio" value="text" checked/> Plain text
            </label>
            <label class="radio-inline">
              <input name="type" type="radio" value="code"/> Code snippet
            </label>
          </div>
        </div>
        <div class="form-group">
          <label>Link <span class="text-muted">(Optional)</span></label>
          <input class="form-control" name="link" type="text" placeholder="Related website..."/>
        </div>
        <input name="author" type="hidden" value="<%= userId %>"/>
        <button type="submit" class="btn btn-primary">Publish</button>
        <a href="/" class="btn btn-default">Cancel</a>
      </form>
    </div>
  </div>
</div>

<%- include('layout/footer'); %>
